{
  "manifest_version": 3,
  "name": "GreatShield",
  "version": "0.1.0",
  "description": "Browser-Embedded Lightweight Antivirus",
  "permissions": [
    "downloads",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
} 